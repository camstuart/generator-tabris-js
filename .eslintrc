{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es6": true
  },
  "rules": {
    "semi": 2,
    "eqeqeq": 2,
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "no-trailing-spaces": 2,
    "eol-last": 2,
    "no-else-return": 2,
    "no-with": 2,
    "quotes": [2, "single"],
    "space-infix-ops": 2,
    "space-unary-ops": 2,
    "space-before-blocks": 2,
    "space-in-parens": [2, "never"]
  }
}
